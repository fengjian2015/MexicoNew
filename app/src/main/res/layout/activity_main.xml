<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/id_iv_home_show"
        android:layout_width="160dp"
        android:layout_height="174dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@mipmap/ic_activity_main_logo" />

    <TextView
        android:id="@+id/id_tv_bottom_lb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_iv_home_show"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="152dp"
        android:background="@drawable/app_home_action_btn_select"
        android:gravity="center"
        android:paddingLeft="44dp"
        android:text="@string/string_activity_bottom_actionliveness"
        android:textColor="@color/white"
        android:textSize="@dimen/app_default_text" />

    <TextView
        android:id="@+id/id_tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_tv_bottom_lb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Ve" />

    <TextView
        android:id="@+id/id_tv_integrated_doc"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/app_main_integrated_doc_bg"
        android:gravity="center"
        android:paddingEnd="6dp"
        android:paddingStart="@dimen/app_default_left_dimen"
        android:text="@string/app_sdk_integrated_doc"
        android:textSize="12sp"
        android:textColor="@color/app_integrated_doc_text"/>

</RelativeLayout>