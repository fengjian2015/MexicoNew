<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MexicoApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">#666666</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="second_entry_item_style">
        <item name="android:layout_width">@dimen/second_menu_item_width</item>
        <item name="android:layout_height">@dimen/second_menu_item_height</item>
    </style>

    <style name="main_entry_text_style">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/radio_text_color</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="bottom_item_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="radio_button_style" parent="second_entry_item_style">
        <item name="android:clickable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
        <item name="android:button">@null</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <!--<item name="android:backgroundDimEnabled">false</item>-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--<item name="colorAccent">@color/actionsheet_blue</item>-->
    </style>

    <style name="dialog_style" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>